<h1 class="mb-1 restaurant-show-title">加入新的餐廳</h1>
<div class="container">
  <form action="/restaurants/{{restaurant._id}}?_method=PUT" method="POST">
    <div class="form-group">
      <label for="formGroupExampleInput2">名稱</label>
      <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="請輸入店名" value="{{restaurant.name}}" name="name" required>
    </div>
    <div class="form-group">
      <label for="formGroupExampleInput2">name_en</label>
      <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="英文名稱" value="{{restaurant.name_en}}" name="name_en">
    </div>
    <div class="form-group">
      <label for="formGroupExampleInput2">類別</label>
      <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="咖啡、吃到飽..." value="{{restaurant.category}}" name="category" required>
    </div>
    <div class="form-group">
      <label for="formGroupExampleInput2">image連結</label>
      <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="https://assets-lighthouse.s3...." value="{{restaurant.image}}" name="image">
    </div>
    <div class="form-group">
      <label for="formGroupExampleInput2">地址</label>
      <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="請輸入地址" value="{{restaurant.location}}" name="location" required>
    </div>
    <div class="form-group">
      <label for="formGroupExampleInput2">電話</label>
      <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="ex : 02 1234 5678" value="{{restaurant.phone}}" name="phone" required>
    </div>
    <div class="form-group">
      <label for="formGroupExampleInput2">google_map</label>
      <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="https://goo.gl/maps/..." value="{{restaurant.google_map}}" name="google_map">
    </div>
    <div class="form-group">
      <label for="formGroupExampleInput2">評分</label>
      <input type="number" class="form-control" id="formGroupExampleInput2" placeholder="4.3" min="0" max="5" value="{{restaurant.rating}}" step="0.1" name="rating" required>
    </div>
    <div class="form-group">
      <label for="formGroupExampleInput2">介紹</label>
      <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="請簡短輸入" value="{{restaurant.description}}" name="description">
    </div>

    <button class="btn btn-major" type="submit" id="add-button">確定修改</button>
  </form>
</div>