<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body m-auto bg-light" style="max-width: 500px">
      <h1 class="text-center mt-3">登入用戶</h1>
      {{> message}}
      <form action="/users/login" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" required>
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password" required>
        </div>
        <button type="submit" class="btn btn-major btn-block">Login</button>
        <a href="/auth/facebook" class="btn btn-info btn-block" style="background-color: rgb(24, 119, 242)">Facebook Login</a>
      </form>
      <p class="lead mt-4">
        No Account? <a href="/users/register">Register</a>
      </p>
    </div>
  </div>
</div>