<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/restaurants/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..." value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
              </svg></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>


<!-- restaurant list -->
<div class="container mt-5">
  <div class="d-flex justify-content-between mb-2 mx-auto" style="width: 900px;">
    <div>
      <a href="/restaurants/add" class="btn btn-major mb-2">+新增餐廳</a>
    </div>

    <div class="d-flex justify-content-end mt-2">
      <form class="mr-3" action="/restaurants/sort" method="get">
        <select onchange="submit()" name="sortCondition">
          <option value="" name="">Sort</option>
          <option value="nameAsc" name="name_asc">A -> Z</option>
          <option value="nameDesc" name="name_desc">Z -> A</option>
          <option value="category" name="category">類別</option>
          <option value="location" name="location">地區</option>
        </select>
      </form>
      <p>排序方式 : {{sortName}}</p>
    </div>
  </div>

  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurants}}
        <div>
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>

            </div>
            <div>
              <div class="d-flex justify-content-end bd-highlight mr-1 mb-1">
                <a href="/restaurants/{{this._id}}/edit">Edit</a>
                <a href="/restaurants/{{this._id}}/detail" class="ml-1">Detail</a>
                <form action="/restaurants/{{this._id}}?_method=DELETE" method="post" onSubmit="javascript:return window.confirm('確認刪除嗎?')">
                  <button class="btn btn-outline-danger btn-sm ml-1" type="submit">Delete</button>
                </form>
              </div>
            </div>
          </div>
        </div>

        {{/each}}
      </div>
    </div>
  </div>
</div>